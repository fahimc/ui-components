{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist/js/component",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}